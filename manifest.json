{
  "manifest_version": 2,
  "name": "Toggle Input Field",
  "version": "1.0.0",

  // "default_locale": "en",
  "description": "Toggle cursor between input fields using shortcut keys.",
  // "icons": {
  //   "16": "images/icon_16.png",
  //   "48": "images/icon_48.png",
  //   "128": "images/icon_128.png"
  // },

  "content_scripts": [ {
    "matches": ["<all_urls>"],
    "js": ["js/content.js", "plugins/default.js"]
  } ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "commands": {
    "focus_next_input": {
      "description": "Focus cursor onto the next input field",
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "MacCtrl+I"
      }
    },
    "focus_previous_input": {
      "description": "Focus cursor onto the previous input field",
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "MacCtrl+Shift+I"
      }
    }
  },
  "minimum_chrome_version": "25"
}
